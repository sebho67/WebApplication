@model Post


<div class="row">

    <div class="col-xs-12 col-md-6">
        <h1>@Model.Title</h1>
        @Html.Raw(Model.Content)
    </div>

    <div class="col-xs-12 col-md-6" >
        <img class="img-responsive" src="@Model.ImgUrl" alt="@Model.Title" />
    </div>

</div>

<div>
    <a class="btn btn-default" role="button" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>

</div>




